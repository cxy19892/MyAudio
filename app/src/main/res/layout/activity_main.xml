<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cxy.myaudio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello World!"
        android:id="@+id/tv_msg" />
    
    <com.cxy.myaudio.views.CircularChart_1
        android:id="@+id/m_circular_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.cxy.myaudio.views.MyProsessbar
        android:id="@+id/mypro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/m_circular_chart"/>

    <com.cxy.myaudio.views.LinearChart1
        android:id="@+id/m_linear_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/m_linear_chart"
        android:text="Start"
        android:id="@+id/btn_start"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/m_linear_chart"
        android:text="STOP"
        android:id="@+id/btn_stop"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
